    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run main - No args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": []
        },
        {
            "name": "Run main - With path",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": [
                "./go.mod"
            ]
        },
        {
            "name": "Run main - help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {},
            "args": [
                "-help"
            ]
        }
    ]
}